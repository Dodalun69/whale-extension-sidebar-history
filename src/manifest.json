{
  "manifest_version": 2,
  "name": "사이드바 방문 기록 Sidebar History",
  "description": "'다른 기기의 탭', '방문 기록'을 사이드바에서 확인할 수 있습니다.",

  "default_locale": "en",

  "sidebar_action": {
    "default_icon": {
      "16": "icon/icon-16.png",
      "48": "icon/icon-48.png",
      "128": "icon/icon-128.png"
    },
    "default_page": "sidebarPage.html",
    "default_title": "Sidebar History",
    "use_navigation_bar": false
  },

  "permissions": ["history", "sessions", "tabs", "<all_urls>", "storage"],
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}
